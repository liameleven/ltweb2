<div class="card">
    <div class="card-header">
        <h3 class="card-title">Add Small Category</h3>
    </div>
    <div class="card-body">
        <div class="col-md-12">
            <!-- jquery validation -->
            <div class="card card-primary">
                <!-- /.card-header -->
                <!-- form start -->
                <form role="form" id="quickForm" novalidate="novalidate" method="post"
                    action="/dashboard/small-category/add">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Name</label>
                            <input type="text" name="name" class="form-control"
                                id="exampleInputName">
                            <label>Big Category</label>
                            <select class="form-control select2 select2-danger select2-hidden-accessible"
                                data-dropdown-css-class="select2-danger" style="width: 100%;" data-select2-id="12"
                                tabindex="-1" aria-hidden="true" name="bid">
                                {{#each bigCategories}}
                                <option value="{{bid}}" data-select2-id="14">{{name}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
            <!-- /.card -->
        </div>
    </div>
</div>