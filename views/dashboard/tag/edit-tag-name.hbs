<div class="card">
    <div class="card-header">
        <h3 class="card-title">Edit Tag</h3>
    </div>
    <div class="card-body">
        <div class="col-md-12">
            <!-- jquery validation -->
            <div class="card card-primary">
                <!-- /.card-header -->
                <!-- form start -->
                <form role="form" id="quickForm" novalidate="novalidate" method="post"
                    action="/dashboard/tag-name/edit">
                    <div class="card-body">
                        <input type="text" name="id" hidden value="{{tag.id}}">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tag Name</label>
                            <input type="text" name="name" value="{{tag.name}}" class="form-control"
                                id="exampleInputName">
                        </div>
                        <div class="form-group mb-0">
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
            <!-- /.card -->
        </div>
    </div>
</div>